{% extends "layout.njk" %}

{% block head %}
<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
<title>Videos - Rocketseat</title>
{% endblock %}


{% block content %}


<div id="wrapper">
  <h1>Videos</h1>
</div>
<div class="cards">

  {% for item in items %}
  <div class="card" id="{{item.id}}">
    <div class="card_image-container {{ 'featured-wrapper' if item.featured }}">
      <img src="http://i3.ytimg.com/vi/{{item.id}}/maxresdefault.jpg" alt="Imagem de {{item.title}}">
      {% if item.featured %}
        <div class="featured">Featured</div>
      {% endif %}
    </div>

    <div class="card_content">
      <p>{{item.title}}</p>
    </div>

    <div class="card_info">
      <div class="card_info-time">
        <p>{{item.duration}}</p>
      </div>
        
      <div class="card_keyword">
        <p>{{item.key_word}}</p>
      </div>
    </div>
  </div>
  {% endfor %}
</div>

<div class="modal-overlay">
  <div class="modal">
    <div class="close-modal">
      <i class="material-icons">
        close
      </i>
    </div>

    <div class="maximize-modal">
      <i class="material-icons">
        open_in_full
      </i>
    </div>

    <div class="modal-content">
      <iframe src="" frameborder="0"></iframe>
    </div>
    

  </div>
</div>
<script src="/scripts.js"></script>
{% endblock %}